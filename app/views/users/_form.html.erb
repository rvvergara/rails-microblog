<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: path) do |f| %>
    <%= render 'shared/error_messages'%>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control"%>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      <% target_path = params[:action] == "edit" ? user_path(@user) : root_url  %>
      <%= f.submit btn_txt, class: "btn btn-primary" %>
      <a href=<%=target_path%> class="btn btn-success">Cancel</a>
    <% end %>
    <div class="gravatar_edit <%= no_display %>">
      <%= gravatar_for @user if !no_display %>
      <a href="http://gravatar.com/emails" target="_blank" rel="noopener">change</a>
    </div>
  </div>
</div>